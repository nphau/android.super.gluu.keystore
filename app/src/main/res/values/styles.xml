<resources>

    <!-- Main app theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Style for splash page -->
    <style name="SplashScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomTabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="tabTextColor">@color/blackColor</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabTextAppearance">@style/CustomTabTexStyle</item>
    </style>

    <style name="CustomTabTexStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
    </style>


    <!-- Key Detail -->

    <style name="KeyDetailTextContainer">
        <item name="android:paddingBottom">14dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="KeyDetailTitleTextView" >
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:gravity">start</item>
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
    </style>

    <style name="KeyDetailValueTextView">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:gravity">end</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
    </style>

    <style name="KeyDetailCenterView">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>


    <!-- Secure Entry -->

    <style name="SecureEntryTextContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/white_background_with_ripple</item>
    </style>

    <style name="SecureEntryTextView" >
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
    </style>

    <style name="SecureEntryIconImageView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <style name="SecureEntryCaret">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:src">@drawable/right_caret</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SecureEntryBorder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/border_grey</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>


    <!-- Log Detail and Accept/Deny -->

    <style name="DetailTextContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/whiteColor</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="DetailTextView" >
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">end</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
    </style>

    <style name="DetailIconImageView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <style name="DetailCenterView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="DetailBorder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/border_grey</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>


    <style name="AcceptDenyLinearLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingTop">4dp</item>
    </style>


    <style name="AcceptDenyImageView">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>


    <style name="AcceptDenyTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/whiteColor</item>
    </style>

</resources>
